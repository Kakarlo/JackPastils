<UserControl x:Class="JackPastil.View.InventoryChild.ProductsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:JackPastil.View.InventoryChild"
             xmlns:vm="clr-namespace:JackPastil.ViewModel"
             d:DataContext="{d:DesignInstance Type=vm:ProductsPanelVM}"
             mc:Ignorable="d"
             d:DesignHeight="590"
             d:DesignWidth="950">
    <Border CornerRadius="20"
            Background="white"
            Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>
                <DataGrid Grid.Row="1"
                          FontSize="16"
                          Style="{DynamicResource DataGridStyle1}"
                          CellStyle="{DynamicResource DataGridCellStyle1}"
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                          RowStyle="{StaticResource DataGridRowStyle1}"
                          ItemsSource="{Binding Products, UpdateSourceTrigger=PropertyChanged}"
                          SelectedItem="{Binding CurrentProduct}"
                          SelectedIndex="{Binding Index}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Product Name"
                                            Width="*"
                                            Binding="{Binding ProductName}" />
                        <DataGridTextColumn Header="Product Type"
                                            Width="*"
                                            Binding="{Binding ProductType}" />
                        <DataGridTextColumn Header="Product Price"
                                            Width="*"
                                            Binding="{Binding ProductPrice}" />
                    </DataGrid.Columns>
                </DataGrid>
                <Grid Grid.Column="1"
                      Width="200"
                      Height="50"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Grid.Row="4">
                    <TextBlock Margin="10 0"
                               VerticalAlignment="Center"
                               Foreground="Black"
                               IsHitTestVisible="False"
                               Background="Transparent"
                               Panel.ZIndex="1"
                               Text="Search"
                               FontSize="16" />
                    <TextBox x:Name="txtFilter"
                             Background="Transparent"
                             Margin="0, 5"
                             Padding="5,0,30,0"
                             Style="{StaticResource loginTextbox}" />
                    <fa:IconImage Icon="MagnifyingGlass"
                                  Width="15"
                                  Height="15"
                                  VerticalAlignment="Center"
                                  Margin="0 0 15 0"
                                  Foreground="DimGray"
                                  HorizontalAlignment="Right" />

                </Grid>
                <Border Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Height="350"
                        Width="220"
                        CornerRadius="15"
                        Background="White"
                        Padding="10">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="1"
                                          Color="#BBBBBB"
                                          BlurRadius="5" />
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <TextBlock Text="Name"
                                       FontSize="16" />
                            <TextBox Style="{StaticResource loginTextbox}"
                                     Text="{Binding ProductNameBox, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0, 5"
                                     Padding="0, 5" />
                        </StackPanel>
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="Type"
                                       FontSize="16" />
                            <TextBox Style="{StaticResource loginTextbox}"
                                     Text="{Binding ProductTypeBox, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0, 5"
                                     Padding="0, 5" />
                        </StackPanel>
                        <StackPanel Grid.Row="2">
                            <TextBlock Text="Price"
                                       FontSize="16" />
                            <TextBox Style="{StaticResource loginTextbox}"
                                     Text="{Binding ProductPriceBox, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0, 5"
                                     Padding="0, 5" />
                        </StackPanel>
                        <Button Grid.Row="3"
                                Height="40"
                                Content="Clear"
                                FontSize="20"
                                Command="{Binding ClearRow}"
                                Style="{StaticResource numpadButton}" />
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button Height="40"
                                    Width="90"
                                    Content="Add"
                                    FontSize="20"
                                    Command="{Binding AddRow}"
                                    Style="{StaticResource numpadButton}" />
                            <Button Grid.Column="1" Height="40"
                                    Width="90"
                                    Content="Update"
                                    FontSize="20"
                                    Command="{Binding UpdateRow}"
                                    Style="{StaticResource numpadButton}" />
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <Button Margin="0, 10"
                        Style="{StaticResource loginButton}"
                        Command="{Binding DeleteRow}">
                    <TextBlock Text="Delete row"
                               Padding="10,0" />
                </Button>
                <TextBlock Grid.Column="1"
                           Text="{Binding PageNum}"
                           FontSize="20"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
                <Button Grid.Column="3"
                        Content="forward"
                        Command="{Binding NextPage}" />
                <Button Grid.Column="2"
                        Content="backward"
                        Command="{Binding PreviousPage}" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
