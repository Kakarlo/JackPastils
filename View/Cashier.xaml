                                                Width="70*"
                                                Binding="{Binding ProductName}"/>
                            <DataGridTextColumn Header="Qnt"
                                                Width="70"
                                                Binding="{Binding ProductQuantity}" />
                            <DataGridTextColumn Header="Price"
                                                MinWidth="90"
                                                Width="30*"
                                                Binding="{Binding ProductTotal}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Grid.Row="2"
